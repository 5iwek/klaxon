<div class="klax-section klax-topper">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Editing User</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
      <p class="lead">All users can create, edit and delete items in Klaxon.</p>
      </div>
      <div class="col-md-3">
      </div>
      <div class="col-md-3">
        <% if @current_user.is_admin %>
          <%= link_to 'Delete? Itâ€™s Permanent.', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-lg btn-block" %>
        <% end %>
      </div>
    </div>
  </div><!-- /.container -->
</div>

<%= render 'form' %>

<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>Subscriptions</th>
    </tr>
  </thead>
  <tbody>
    <% @user.watching.each do |watch_item| %>
      <tr>
        <td><%= link_to watch_item.name, [:edit, watch_item] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

