<!doctype>
<html>
<head>
<style>
html, body {
  margin: 0;
  padding: 0;
}
body {
  border-left: 2px solid rgba(0, 0, 0, 0.5);
  background: #FEFEFE;
  padding: 20px;
  font-family: Helvetica, sans-serif;
  font-size: 14px;
  line-height: 1.3em;
}
ul {
  margin: 0;
  padding: 0;
}
#match-text {
  font-size: 10px;
}
</style>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>

  <h2>Klaxon</h2>

  Name: <%= @page.name %>


  <%= link_to "Edit In App", edit_page_url(@page), target: '_blank' %>

  <p id="path-preview"></p>
  <p id="status"></p>
  <p id="match-text"></p>

  <script>

  window.pageID = <%= @page.id %>;
  var currentSelector = 'body';

  var mouseState = 'hover';
  var toggleMouseState = function() {
    if (mouseState === 'hover') {
      mouseState = 'edit';
    } else {
      mouseState = 'hover';
    }

  }

  var handleClick = function() {
    updateSelector(currentSelector);
  }

  var handleUpdatePath = function(path) {
    currentSelector = path.join(' ');
  }

  window.addEventListener("message", function(e) {
    var origin = e.origin;
    var data = JSON.parse(e.data);

    if (data.event === 'metadata') {

    } else if (data.event === 'click') {
      handleClick();
    } else if (data.event === 'updatePath') {
      handleUpdatePath(data.value);
      document.querySelector("#match-text").innerText = data.matchText;
    }
  }, false);

  var updateSelector = function(selector) {
    console.log('updating selector', selector);
    var el = document.querySelector('#status');
    el.innerText = "Saving....";
    $.post("<%= embed_update_page_selector_url %>", {
      authenticity_token: "<%= form_authenticity_token %>",
      id: window.pageID,
      css_selector: selector
    }).success(function(data) {
      el.innerText = "Done!"
      setTimeout(function() {
        el.innerText = "";
      }, 1000);
    }).fail(function() {
      el.innerText = "Error saving.";
    });
  };

  </script>

</body>
</html>
